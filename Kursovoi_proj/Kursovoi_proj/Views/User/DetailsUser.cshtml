@using Kursovoi_proj.Models

@model UserModel

@{
    ViewBag.Title = "DetailsUser";
}

<h2>Информация о клиенте</h2>

<table class="table">
    <tr>
        <th>Фамилия</th>
        <th>Имя</th>
        <th>Email</th>
        <th>Номер телефона</th>
        <th>Действия</th>
    </tr>
    @if (Model != null)
    {
        <tr>
            <td>@Model.LastName</td>
            <td>@Model.FirstName</td>
            <td>@Model.Email</td>
            <td>@Model.Phone</td>
            <td>
                @Html.ActionLink("Delete", "Delete", "User", new { id = @Model.UsersID }, new { @class = "btn btn-default" })
                @Html.ActionLink("Edit", "Edit", "User", new { id = @Model.UsersID }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }
</table>
<br>

@Html.ActionLink("Назад", "Index", "User", new { @class = "btn btn-default" })
