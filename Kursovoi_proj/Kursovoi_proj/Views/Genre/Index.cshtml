@using Kursovoi_proj.Models

@model IEnumerable<GenreModel>
@{
    ViewBag.Title = "Index";
}

<h2>Жанры</h2>

<table class="table">
    <tr>
        <th>Код жанра</th>
        <th>Название жанра</th>
        <th>Действия</th>
    </tr>
    @if (Model != null)
    {
        foreach (GenreModel genre in Model)
        {
            <tr>
                <td>@genre.Genre_Id</td>
                <td>@genre.Name_Genre</td>
                <td>
                    @Html.ActionLink("Details", "Details", "Genre", new { id = @genre.Genre_Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Delete", "Delete", "Genre", new { id = @genre.Genre_Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Edit", "Edit", "Genre", new { id = @genre.Genre_Id }, new { @class = "btn btn-default" })
                </td>
            </tr>
        }
    }
</table>
@Html.ActionLink("Add", "Add", "Genre", new { @class = "btn btn-default" })