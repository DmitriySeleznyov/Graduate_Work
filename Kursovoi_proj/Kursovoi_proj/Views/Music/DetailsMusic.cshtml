
@{
    ViewBag.Title = "DetailsMusic";
}


<h2>Информация о музыке</h2>

<table class="table">
    <tr>
        <th>Навзание песни</th>
        <th>Исполнители</th>
        <th>Длительность</th>
        <th>Действия</th>
    </tr>
    @if (Model != null)
    {
        <tr>
            <td>@Model.Name_Song</td>
            <td>@Model.Singer</td>
            <td>@Model.Time</td>
            <td>
                @Html.ActionLink("Delete", "Delete", "Music", new { id = @Model.Song_Id }, new { @class = "btn btn-default" })
                @Html.ActionLink("Edit", "Edit", "Music", new { id = @Model.Song_Id }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }
</table>
<br>

@Html.ActionLink("Назад", "Index", "Music", new { @class = "btn btn-default" })




