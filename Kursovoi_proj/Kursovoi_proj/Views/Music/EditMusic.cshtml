@using Kursovoi_proj.Models

@model MusicModel
{
@Scripts.Render("~/bundles/jqueryval")
}
@{
    ViewBag.Title = "EditMusic";
}

<h2>Изменить данные о треке</h2>

@using (Html.BeginForm("Edit", "Music", FormMethod.Post))
{
    @Html.HiddenFor(model => model.Song_Id)
    <div class="editor-label">
        @Html.Label("Название песни", htmlAttributes: new { @class = "control-label" })
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Name_Song, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Name_Song)
        <br>
    </div>
    <div class="editor-label">
        @Html.Label("Испонители", htmlAttributes: new { @class = "control-label" })
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Singer, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Singer)
        <br>
    </div>
    <div class="editor-label">
        @Html.Label("Длительность", htmlAttributes: new { @class = "control-label" })
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Time, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Time)
        <br>
    </div>
    <input type="submit" class="btn btn-primary" value="Сохранить">
}
<br>
@Html.ActionLink("Назад", "Index", "Music", new { @class = "btn btn-default" })




