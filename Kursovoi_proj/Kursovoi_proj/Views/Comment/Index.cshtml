@using Kursovoi_proj.Models

@model IEnumerable<CommentModel>

@{
    ViewBag.Title = "Комментарии";
}

<h2>Комментарии</h2>

<table class="table">
    <tr>
        <th>Описание комментария</th>
        <th>Дата/Время</th>
        <th>Действия</th>
    </tr>
    @if (Model != null)
    {
        foreach (CommentModel user in Model)
        {
            <tr>
                <td>@user.Comment_Description</td>
                <td>@user.Date_Time</td>
                <td>
                    @Html.ActionLink("Details", "Details", "Comment", new { id = @user.Comment_Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Delete", "Delete", "Comment", new { id = @user.Comment_Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Edit", "Edit", "Comment", new { id = @user.Comment_Id }, new { @class = "btn btn-default" })
                </td>
            </tr>
        }
    }
</table>
@Html.ActionLink("Add", "Add", "Comment", new { @class = "btn btn-default" })




